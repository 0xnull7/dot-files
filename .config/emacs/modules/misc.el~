;;; misc.el --- Miscellaneous Packages setup

;;; Commentary:
;; This file have some miscellaneous packages that make the user experience
;; more fun and elegant. 

;;; Code:

(use-package fireplace
  :ensure t
  ;; C-+ Move fire up
  ;; C-- Move fire down
  ;; C-* Toggle smoke
  ;; C-= Toggle sound (requires ffplay)
  ;; q Turn off fire
  )

;; (use-package fsc.el)

;; (use-package gnus)

(use-package grandshell-theme)

;; (use-package guess-language)

;; (use-package messages)

(use-package mode-icons
  :ensure t
  :config
  (mode-icons-mode))

(use-package monokai-theme)

;; (use-package mu4e)

;; (use-package nyan-mode)

(use-package parrot
  :ensure t
  :config
  (parrot-mode))

;; PDF viewing with pdf-tools
(use-package pdf-tools
  :ensure t
  :magic ("%PDF" . pdf-view-mode)
  :config
  (pdf-tools-install)
  (setq-default pdf-view-display-size 'fit-page))

(use-package prettify-symbol-mode
  :ensure t
  :config
  (global-prettify-symbols-mode +1))

(use-package rainbow-delimiters
  :ensure t
  :hook (prog-mode . rainbow-delimiters-mode))

(use-package rainbow-mode
  :ensure t
  :config
  (rainbow-mode t))

(use-package restart-emacs)







